<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

  <Button
      android:id="@+id/buttonConf"
      android:layout_width="match_parent"
      android:layout_height="210dp"
      android:layout_gravity="center_horizontal"
      android:layout_margin="50dp"
      android:layout_marginTop="200dp"
      android:background="@android:color/background_light"
      android:drawableEnd="@drawable/ic_chevron"
      android:drawablePadding="30dp"
      android:minWidth="0dp"
      android:scaleType="center"
      android:text="@string/activity_book_options_conf"
      android:textColor="#DE000000"
      app:layout_constraintTop_toTopOf="parent"
      tools:layout_editor_absoluteX="53dp" />

  <Button
      android:id="@+id/buttonOffice"
      android:layout_width="match_parent"
      android:layout_height="200dp"
      android:layout_gravity="center_horizontal"
      android:layout_margin="50dp"
      android:layout_marginTop="24dp"
      android:background="@android:color/background_light"
      android:drawableEnd="@drawable/ic_chevron"
      android:drawablePadding="30dp"
      android:minWidth="0dp"
      android:scaleType="center"
      android:text="@string/activity_book_options_desk"
      android:textColor="#DE000000"
      app:layout_constraintTop_toBottomOf="@id/buttonConf"
      tools:layout_editor_absoluteX="50dp" />
</androidx.constraintlayout.widget.ConstraintLayout>