<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

  <com.google.android.material.appbar.AppBarLayout
      android:id="@+id/appBarLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/colorPrimary"
      android:fitsSystemWindows="true"
      app:elevation="0dip"
      app:layout_constraintBottom_toTopOf="@+id/buttonConf"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:titleTextColor="@color/colorText" />

  </com.google.android.material.appbar.AppBarLayout>

  <Button
      android:id="@+id/buttonConf"
      android:layout_width="match_parent"
      android:layout_height="100dp"
      android:layout_gravity="start|center_vertical"
      android:gravity="start|center_vertical"
      android:paddingStart="10dp"
      android:layout_margin="50dp"
      android:layout_marginTop="32dp"
      android:background="@android:color/background_light"
      android:bottomLeftRadius="10dp"
      android:bottomRightRadius="10dp"
      android:drawableEnd="@drawable/ic_chevron"
      android:drawablePadding="30dp"
      android:minWidth="0dp"
      android:scaleType="center"
      android:text="@string/activity_book_options_conf"
      android:textColor="#DE000000"
      android:topLeftRadius="20dp"
      android:topRightRadius="20dp"
      app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
      tools:layout_editor_absoluteX="68dp" />

  <Button
      android:id="@+id/buttonOffice"
      android:layout_width="match_parent"
      android:layout_height="100dp"
      android:layout_gravity="center_vertical"
      android:gravity="start|center_vertical"
      android:paddingStart="10dp"
      android:layout_margin="50dp"
      android:background="@android:color/background_light"
      android:bottomLeftRadius="10dp"
      android:bottomRightRadius="10dp"
      android:drawableEnd="@drawable/ic_chevron"
      android:drawablePadding="30dp"
      android:minWidth="0dp"
      android:scaleType="center"
      android:text="@string/activity_book_options_desk"
      android:textColor="#DE000000"
      android:topLeftRadius="10dp"
      android:topRightRadius="10dp"
      app:layout_constraintTop_toBottomOf="@+id/buttonConf"
      tools:layout_editor_absoluteX="50dp" />

  <Button
      android:id="@+id/buttonAll"
      android:layout_width="match_parent"
      android:layout_height="100dp"
      android:layout_gravity="center_vertical"
      android:gravity="start|center_vertical"
      android:paddingStart="10dp"
      android:layout_margin="50dp"
      android:background="@android:color/background_light"
      android:bottomLeftRadius="10dp"
      android:bottomRightRadius="10dp"
      android:drawableEnd="@drawable/ic_chevron"
      android:drawablePadding="30dp"
      android:minWidth="0dp"
      android:scaleType="center"
      android:text="@string/activity_book_options_all"
      android:textColor="#DE000000"
      android:topLeftRadius="10dp"
      android:topRightRadius="10dp"
      app:layout_constraintTop_toBottomOf="@+id/buttonOffice"
      tools:layout_editor_absoluteX="50dp" />

  <com.google.android.material.bottomnavigation.BottomNavigationView
      android:id="@+id/bottomNav"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_gravity="bottom"
      android:background="@color/colorBotNav"
      app:itemIconTint="@color/colorBotNavText"
      app:itemTextColor="@color/colorBotNavText"
      android:visibility="visible"
      app:labelVisibilityMode="labeled"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:menu="@menu/menu_main_bottom"
      tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>
